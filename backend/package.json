{
  "name": "stream-hub",
  "version": "0.0.0",
  "scripts": {
    "start": "uvicorn main:app --reload",
    "test": "pytest -s"
  },
  "private": true,
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "printWidth": 80
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-console": "warn",
      "quotes": [
        "error",
        "single"
      ]
    }
  }
}
